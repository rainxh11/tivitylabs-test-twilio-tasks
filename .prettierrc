{
    "overrides": [
        {
            "files":["src/**/*.js", "*.js"],
            "options":{
                "parser":"babel",
                "semi": false,
                "tabWidth": 2,
                "singleQuote": false,
                "printWidth": 80
            }
        },
        {
            "files":["src/**/*.ts"],
            "options":{
                "parser":"babel-ts",
                "semi": false,
                "tabWidth": 2,
                "singleQuote": false,
                "printWidth": 80
            }
        },
        {
            "files":[".prettierrc", "*.json"],
            "options": {
                "parser":"json",
                "tabWidth": 2,
                "singleQuote": false,
                "printWidth": 80
            }
        }
    ]
}